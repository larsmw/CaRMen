{% extends 'base.html.twig' %}

{% block title %}Hello CustomerController!{% endblock %}

{% block body %}
  <h1>Hello</h1>

  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      {% for customer in customers %}
        <tr>
          <td><a href="/customer/{{ customer.id }}">{{ customer.firstName }}</a></td>
          <td>{{ customer.lastName }}</td>
          <td>{{ customer.phone }}</td>
        </tr>
{% else %}
        <tr>
          <td colspan="5">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}
